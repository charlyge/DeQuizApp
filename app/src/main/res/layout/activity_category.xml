<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ccc666"
    tools:context="com.example.android.dequizapp.Category">



    <TextView
        android:id="@+id/picid"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/select_category"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="100dp"
        android:textSize="@dimen/top_text"
        android:layout_marginTop="20dp"
        android:textColor="#E65100"
        android:textStyle="bold"
        android:textAllCaps="true"
        />


    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:src="@drawable/category"
        android:scaleType="centerCrop"

        />



    <Button
        android:id="@+id/science"
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:text="Science Quiz"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="70dp"
        android:background="#26C6DA"
        />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:text=" General Knowlege"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="30dp"
        android:background="#00BCD4"
        />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:text="computer Quiz"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:background="#00ACC1"
        />

    <ImageView
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:src="@drawable/category"
        android:scaleType="centerCrop"

        />

</LinearLayout>
